{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src/api",
    "outDir": "dist/api",
    "declaration": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/api-client/**/*"],
  "exclude": ["node_modules", "dist", "openapi.json"]
}
